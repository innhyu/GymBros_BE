{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "https://cryptic-temple-10365.herokuapp.com",
  "resourcePath": "joined_workouts",
  "apis": [
    {
      "path": "/joined_workouts.json",
      "operations": [
        {
          "summary": "Joins a user into a workout through the joined workout table",
          "parameters": [
            {
              "paramType": "header",
              "name": "Authorization",
              "type": "string",
              "description": "Authentication-Token",
              "required": true
            },
            {
              "paramType": "form",
              "name": "user_id",
              "type": "integer",
              "description": "User ID",
              "required": true
            },
            {
              "paramType": "form",
              "name": "workout_id",
              "type": "integer",
              "description": "Workout ID",
              "required": true
            }
          ],
          "notes": "Does have authentication for user_id; will not be be added later.",
          "responseMessages": [
            {
              "code": 406,
              "responseModel": null,
              "message": "Not Acceptable"
            }
          ],
          "nickname": "JoinedWorkouts#create",
          "method": "post"
        }
      ]
    },
    {
      "path": "/joined_workouts/{id}.json",
      "operations": [
        {
          "summary": "Destroys a joined workout with a given set of parameters",
          "parameters": [
            {
              "paramType": "header",
              "name": "Authorization",
              "type": "string",
              "description": "Authentication-Token",
              "required": true
            },
            {
              "paramType": "path",
              "name": "id",
              "type": "integer",
              "description": "Joined Workout ID",
              "required": true
            }
          ],
          "notes": "Does have authentication for user_id; will not be added later. Anyone can leave a workout. Will have some penalties for leaving later.",
          "responseMessages": [
            {
              "code": 404,
              "responseModel": null,
              "message": "Not Found"
            }
          ],
          "nickname": "JoinedWorkouts#destroy",
          "method": "delete"
        }
      ]
    },
    {
      "path": "/joined_workouts/{id}/approve.json",
      "operations": [
        {
          "summary": "Updates the joined workout to be approve",
          "parameters": [
            {
              "paramType": "header",
              "name": "Authorization",
              "type": "string",
              "description": "Authentication-Token",
              "required": true
            },
            {
              "paramType": "path",
              "name": "id",
              "type": "integer",
              "description": "Joined Workout ID",
              "required": true
            }
          ],
          "notes": "When the host changes a workout detail, the user has to approve the workout again.",
          "responseMessages": [
            {
              "code": 404,
              "responseModel": null,
              "message": "Not Found"
            }
          ],
          "nickname": "JoinedWorkouts#approve",
          "method": "patch"
        }
      ]
    },
    {
      "path": "/joined_workouts/{id}/accept.json",
      "operations": [
        {
          "summary": "Updates the joined workout to be accept",
          "parameters": [
            {
              "paramType": "header",
              "name": "Authorization",
              "type": "string",
              "description": "Authentication-Token",
              "required": true
            },
            {
              "paramType": "path",
              "name": "id",
              "type": "integer",
              "description": "Joined Workout ID",
              "required": true
            }
          ],
          "notes": "When user joins a workout, the host has to accept that particular user.",
          "responseMessages": [
            {
              "code": 404,
              "responseModel": null,
              "message": "Not Found"
            }
          ],
          "nickname": "JoinedWorkouts#accept",
          "method": "patch"
        }
      ]
    }
  ],
  "authorizations": null
}